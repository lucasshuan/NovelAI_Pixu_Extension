{
    "manifest_version": 3,
    "name": "Pixu for NovelAI",
    "version": "0.1.0",
    "description": "Use your own story images on NovelAI, designed to work alongside an user script",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "https://novelai.net/*"
    ],
    "background": {
        "service_worker": "sw.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://novelai.net/*"
            ],
            "js": [
                "core.js",
                "template.js",
                "storage.js",
                "ui.js",
                "content.js"
            ],
            "run_at": "document_start"
        }
    ]
}